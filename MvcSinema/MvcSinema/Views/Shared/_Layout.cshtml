@using System.Globalization;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Sinemacım</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/css/blog-home.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="height:150px; background-color:#a31d1d;">
        <div class="container">
            <a href="/Home/Index">
                <div style="width:300px;height:80px;margin-left:auto;margin-right:auto;
    background-image:url(/Uploads/logo.PNG);"></div>
            </a>
                @*<a class="navbar-brand" >Sinemacım</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Index">
                                Ana Sayfa
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Hakkimizda/">Hakkımızda</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Iletisim/">İletişim</a>
                        </li>
                        @if (Session["uyeid"] != null)
                        {
                            
                            <li class="nav-item">
                                
                                <a class="nav-link" href="/Uye/Index/@Session["uyeid"]">@CultureInfo.CurrentCulture.TextInfo.ToTitleCase(@Session["kullaniciadi"].ToString())</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Logout/">Çıkış Yap</a>
                            </li>
                            if (Convert.ToInt32(Session["yetkiid"]) == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/Index/" target="_blank">Admin Paneli</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Login/">Giriş Yap</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
</nav>
    <!-- Page Content -->
    <div class="container">
        
        

            
        <div class="row">
           
            <!-- Blog Entries Column -->
            @RenderBody()
           
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4" style="margin-left:auto;">
                <!-- Search Widget -->
                <div class="card my-4">
                    @Html.Partial("BlogAraPartial")
                </div>
                <!-- Categories Widget -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("KategoriPartial", "Home");
                    }
                    @{
                        Html.RenderAction("PopulerMakaleler", "Home");
                    }
                </div>
                <!-- Side Widget -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("PopulerMakaleler", "Home");
                    }
                </div>
                <div class="card my-4">
                   @{
                       Html.RenderAction("SonYorumlar", "Home");
                }
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; @DateTime.Now.Year</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
